<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:id="@+id/scroll">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relLayout1">

                <!-- profile snippet -->
                <include layout="@layout/snippet_profile"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp"
                android:layout_below="@id/relLayout1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:text="Choose Scene"
                    android:textSize="30sp"
                    />

                <in.cinderella.testapp.Utils.HashtagView
                    android:id="@+id/scene_tags"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    app:rowMode="wrap"
                    app:tagBackground="@drawable/chapter_bg"
                    app:selectionMode="true"
                    app:tagPaddingLeft="10dp"
                    app:tagPaddingRight="10dp"
                    app:tagTextSize="20sp"
                    app:composeMode="origin"
                    app:rowDistribution="random"
                    app:tagTextColor="@color/white" />

                <TextSwitcher
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:id="@+id/scene_desc"
                    android:background="@drawable/home_bg"
                    android:layout_marginBottom="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    app:autoSizeTextType="uniform"
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:text="Partner Preferences"
                    android:textSize="30sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:text="(Coming Soon)"
                    android:textSize="20sp"
                    />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_bg"
                    android:id="@+id/parter_preference"
                    android:layout_margin="30dp"
                    android:layout_gravity="center_horizontal"
                    >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/option0"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="Man"
                        android:textSize="20sp"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/option1"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="Woman"
                        android:textSize="20sp"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/option2"
                        android:checked="true"
                        android:text="Any"
                        android:textSize="20sp"/>
                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:text="Shake to Connect "
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="30dp"
                    android:src="@drawable/ic_phone_icon"
                    android:id="@+id/phone"/>



            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:background="@drawable/pixie_cost_switcher"
        app:layout_anchor="@id/scroll"
        app:layout_anchorGravity="top|end">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_pixies"/>
        <TextSwitcher
            android:id="@+id/pixie_cost_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="7dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
