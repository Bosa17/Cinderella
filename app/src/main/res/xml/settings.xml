<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Profile Settings">

        <CheckBoxPreference
            android:key="checkbox_preference"
            android:title="Allow E-mail"
            android:defaultValue="Allow E-mail"/>

        <EditTextPreference
            android:key="edittext_preference"
            android:title="E-mail ID"
            android:summary="example@gmail.com"
            android:dialogTitle="Enter E-mail ID"
            android:dependency="checkbox_preference" />

        <Preference android:title="Logout"
            android:key="logout"
            android:summary="Log out from this account"/>


    </PreferenceCategory>
</PreferenceScreen>