<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Connections">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/snippet_connections"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/empty_connections"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_empty_connections"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empty_connections"
        android:id="@+id/empty_connections_tag"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="Oh no! You have no Connections."/>

    <Button
        android:id="@+id/showpopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Show"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:background="@drawable/search_edit_text"
        android:paddingStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"/>


</RelativeLayout>