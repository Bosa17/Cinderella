<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close"
        android:layout_marginStart="30dp"
        android:layout_above="@id/remoteUserConnectDp"
        android:id="@+id/closecall"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        android:id="@+id/remoteUserConnectDp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/connect_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call User"
        android:layout_below="@id/remoteUserConnectDp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@drawable/fb_button"
        android:paddingStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:drawableStart="@drawable/ic_call_end"/>
</RelativeLayout>